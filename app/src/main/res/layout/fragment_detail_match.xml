<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="data"
            type="com.rifafauzi.footballmatch.model.match.Match" />

        <variable
            name="showLoading"
            type="Boolean" />

        <variable
            name="showData"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detailmatch.DetailMatchFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="@{showData ? View.VISIBLE : View.GONE}">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/dateScheduleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        tools:text="24 November 2019"
                        android:text="@{data.dateEvent}"
                        android:textColor="@color/colorAccent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearCard"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/homeImg"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                tools:src="@drawable/trophy"
                                android:contentDescription="@string/image"/>

                            <TextView
                                android:id="@+id/homeNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@{data.strHomeTeam}"
                                tools:text="Real Madrid"/>

                            <TextView
                                android:id="@+id/homeScorerTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="@{data.strHomeGoalDetails}"
                                tools:text="12':Cristiano Ronaldo"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/homeScoreTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="2"
                                android:layout_gravity="center"
                                android:text="@{data.intHomeScore}"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vs"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/awayScoreTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="2"
                                android:layout_gravity="center"
                                android:text="@{data.intAwayScore}"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/awayImg"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                tools:src="@drawable/trophy"
                                android:contentDescription="@string/image"/>
                            <TextView
                                android:id="@+id/awayNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@{data.strAwayTeam}"
                                tools:text="Real Madrid"/>
                            <TextView
                                android:id="@+id/awayScorerTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@{data.strAwayGoalDetails}"
                                android:textSize="12sp"
                                tools:text="12':Cristiano Ronaldo"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@string/lineups"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_700"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:text="@{data.strHomeLineupGoalkeeper}"
                        android:id="@+id/gkHomeTv"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/goal_keeper"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:text="@{data.strAwayLineupGoalkeeper}"
                        android:textAlignment="textEnd"
                        android:id="@+id/gkAwayTv"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="@{data.strHomeLineupDefense}"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:id="@+id/defHomeTv"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/defense"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:text="@{data.strAwayLineupDefense}"
                        android:textAlignment="textEnd"
                        android:id="@+id/defAwayTv"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:text="@{data.strHomeLineupMidfield}"
                        android:id="@+id/midHomeTv"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/midfield"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="@{data.strAwayLineupMidfield}"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:textAlignment="textEnd"
                        android:id="@+id/midAwayTv"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:text="@{data.strHomeLineupForward}"
                        android:id="@+id/forHomeTv"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/forward"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="@{data.strAwayLineupForward}"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:textAlignment="textEnd"
                        android:id="@+id/forAwayTv"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_700"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:text="@string/substitutes"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_700"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="@{data.strHomeLineupSubstitutes}"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:id="@+id/subHomeTv"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        tools:text="Iker Casillas"
                        android:text="@{data.strAwayLineupSubstitutes}"
                        android:textAlignment="textEnd"
                        android:id="@+id/subAwayTv"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerDetailMatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{showLoading ? View.VISIBLE : View.GONE, default=gone}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include layout="@layout/shimmer_leagues" />

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>